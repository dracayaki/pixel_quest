<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.SettingsController"
      spacing="20" alignment="CENTER"
      prefWidth="400" prefHeight="300"
      stylesheets="@../../view/css/settings_style.css"
      styleClass="settingsPane">

    <Label text="Settings" styleClass="settingsTitle"/>

    <!-- Volumen -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Volume:"/>
        <Slider fx:id="volumeSlider" min="0" max="1" value="0.5" blockIncrement="0.1"/>
    </HBox>

    <!-- Idioma -->
    <HBox spacing="10" alignment="CENTER">
        <Label text="Language:"/>
        <ComboBox fx:id="languageComboBox">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="EspaÃ±ol"/>
                    <String fx:value="English"/>
                </FXCollections>
            </items>
        </ComboBox>
    </HBox>

    <!-- Cerrar -->
    <Button text="Close" onAction="#handleClose"/>
</VBox>
